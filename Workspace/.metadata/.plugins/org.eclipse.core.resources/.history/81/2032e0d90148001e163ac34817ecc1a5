package com.dao;

import java.sql.Connection;
import java.sql.ResultSet;
import java.sql.SQLException;
import java.sql.Statement;
import java.util.ArrayList;
import java.util.List;

import com.model.Department;
import com.model.Employee;

public class HrdaoImpl implements Hrdao{

	@Override
	public List<Department> readAllDepartments() {
		Connection connection=MySqlConnection.getConnection();
		ResultSet resultSet=null;
		Department department=null;
		Employee employee=null;
		List<Department> departments=new ArrayList<>();
		List<Employee> employees=new ArrayList<>();
		try {
			Statement statement=connection.createStatement();
			String query="SELECT d.dept_name ,GROUP_CONCAT(e.emp_id) AS emp_ids, SUM(e.emp_salary) AS total_salary\r\n"
					+ "FROM Department AS d\r\n"
					+ "JOIN Employee AS e ON d.dept_id = e.dept_fk_id\r\n"
					+ "GROUP BY d.dept_name ;";
			resultSet=statement.executeQuery(query);
			while(resultSet.next()) {
				department=new Department();
				department.setDept_id(resultSet.getInt("dept_id"));
				department.setDept_name(resultSet.getString("dept_name"));
				departments.add(department);
				employee=new Employee();
				employee.setEmpId(resultSet.getInt("emp_id"));
				employee.setEmpName(resultSet.getString("emp_name"));
				employee.setSalary(resultSet.getInt("emp_salary"));
				employees.add(employee);
				department.setEmployees(employees);
			}
		} catch (SQLException e) {
			System.out.println(e.getMessage());
		}
		return departments;
	}

}
