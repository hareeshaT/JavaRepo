package Day2;

public class Addition {
	
	public static void addition(int[] array) {
		int sum = 0;
        for (int i = 0; i <= array.length; i++) {
            sum += array[i];
            System.out.print(array[i]);
            if (i < array.length) {
                System.out.print("+");
            }
            System.out.print("=" + sum);
            if (i < array.length) {
                System.out.print("\n");
            }
        }
	}

	public static void main(String[] args) {
		int[] arr = {1,2,3,4,5,6};
		addition(arr);

	}

}
